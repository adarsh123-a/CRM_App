generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  name          String?
  email         String         @unique
  passwordHash  String
  role          Role           @default(SALES_EXECUTIVE)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  leads         Lead[]         @relation("OwnerLeads")
  leadHistories LeadHistory[]  @relation("ChangedByHistories")
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Lead {
  id            Int           @id @default(autoincrement())
  title         String
  email         String?
  phone         String?
  status        LeadStatus    @default(NEW)
  ownerId       Int
  owner         User          @relation("OwnerLeads", fields: [ownerId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  leadHistories LeadHistory[]
}

model LeadHistory {
  id          Int        @id @default(autoincrement())
  leadId      Int
  lead        Lead       @relation(fields: [leadId], references: [id])
  changedById Int
  changedBy   User       @relation("ChangedByHistories", fields: [changedById], references: [id])
  oldStatus   LeadStatus
  newStatus   LeadStatus
  changedAt   DateTime   @default(now())
}

enum Role {
  ADMIN
  MANAGER
  SALES_EXECUTIVE
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  CLOSED
}
